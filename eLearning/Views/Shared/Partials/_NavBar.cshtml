@model NavBarItemVM[]

@helper navBarItem(NavBarItemVM item)
{
    <li>
        @if (item.Items.Any())
        {
            <span>@item.Display</span>
            <ul>
                @foreach (var subItem in item.Items)
                {
                    @navBarItem(subItem)
                }
            </ul>
        }
        else
        {
            <a href="@Url.Action("Article", "Articles", new { Id = item.ArticleUid})">@item.Display</a>
        }
    </li>
}

<div class="row">
    <div class="col-md-6">
        <a href="@Url.Action("Index","Home")"><img class="logo"src="http://i.imgur.com/UbWX9nB.png" height="32px" /></a>
    </div>
    <div class="col-md-6">
        <p class="subtitle">La più grande piattaforma gratuita Italiana per Web Developers</b></p>
    </div>
</div>

<div class="navbar navbar-inverse">
    <div class="container-fluid">
        <div class="navbar-header">
            <button type="button" class="navbar-toggle fa fa-list" data-toggle="collapse" data-target=".navbar-collapse">
                @foreach (var rootItem in Model)
                {
                    <span class="icon-bar"></span>
                }
            </button>
        </div>
        <div class="navbar-collapse collapse">
            <ul class="nav navbar-nav">
                @foreach (var rootItem in Model)
                {
                    @navBarItem(rootItem)
                }

            </ul>
