@model ChapterVM
@{
    ViewBag.Title = "Chapter";
}
@section navbar {
    @Html.Action("_NavBar", "Home")
}
    @section sidebar {
        @Html.Action("_Contents", "Articles", new { Id = Model.ArticleUid })
    }
<h2>@Model.Display</h2>
<div class="row">
    <div class="col-md-6 text-left">
        @if (!string.IsNullOrWhiteSpace(Model.PreviousUid))
        {
            <a class="previous" href="@Url.Action("Article", "Articles", new { Id = Model.ArticleUid, ChapterId = Model.PreviousUid })">Lezione precedente</a>
        }
    </div>
    <div class="col-md-6 text-right">
        @if (!string.IsNullOrWhiteSpace(Model.NextUid))
        {
            <a class="next" href="@Url.Action("Article", "Articles", new { Id = Model.ArticleUid, ChapterId = Model.NextUid})">Prossima Lezione</a>
        }
    </div>
</div>
<hr />
<div class="body-content">
    @Html.Raw(Model.ContentHtml)
</div>

<div class="row">
    <div class="col-md-6 text-left">
        @if (!string.IsNullOrWhiteSpace(Model.PreviousUid))
        {
            <a class="previous" href="@Url.Action("Article", "Articles", new { Id = Model.ArticleUid, ChapterId = Model.PreviousUid })">Lezione precedente</a>
        }
    </div>
    <div class="col-md-6 text-right">
        @if (!string.IsNullOrWhiteSpace(Model.NextUid))
        {
            <a class="next" href="@Url.Action("Article", "Articles", new { Id = Model.ArticleUid, ChapterId = Model.NextUid})">Prossima Lezione</a>
        }
    </div>
</div>